# ============================================
# Production Environment Configuration
# ============================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control

# ============================================
# Database Configuration
# ============================================
# SQLite database file path for PayloadCMS
# For production, consider using PostgreSQL for better concurrency
DATABASE_URI=file:./data/payload.db

# PostgreSQL alternative (recommended for production)
# Set DATABASE_URI using connection string from your provider
# Common providers: Neon, Supabase, Railway
# Connection string format: postgresql :// user :password @host :port /db (remove spaces)
# DATABASE_URI=your-provider-connection-string

# ============================================
# PayloadCMS Configuration
# ============================================
# Secret key for PayloadCMS encryption and signing
# CRITICAL: Must be at least 32 characters long and unique
# Generate with: openssl rand -base64 48
PAYLOAD_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_-base64_48

# ============================================
# API Authentication
# ============================================
# API key for protected sync endpoint
# Used to authenticate data synchronization requests
# Generate with: openssl rand -hex 32
SYNC_API_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_-hex_32

# ============================================
# GitHub Integration (Optional)
# ============================================
# Personal Access Token for GitHub API
# Provides higher rate limits for GitHub operations (5000 vs 60 per hour)
# Create at: https://github.com/settings/tokens
# Required scopes: repo (public_repo), read:org
# Token format: ghp_ followed by 36 characters
GITHUB_TOKEN=YOUR_GITHUB_TOKEN_HERE

# ============================================
# Google Analytics 4
# ============================================
# Google Analytics 4 Measurement ID
# Format: G-XXXXXXXXXX
# Create at: https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Google Analytics 4 Measurement Protocol API Secret
# Used for server-side event tracking (Web Vitals, search analytics)
# Create at: https://analytics.google.com/ -> Admin -> Data Streams -> Choose stream -> Measurement Protocol
GA_MEASUREMENT_PROTOCOL_SECRET=

# ============================================
# Sentry Error Tracking (Optional)
# ============================================
# Sentry DSN for error tracking and performance monitoring
# Create at: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# ============================================
# Application URLs
# ============================================
# Public URL of the application (used for canonical URLs, OG tags, etc.)
# Update this with your actual production URL
NEXT_PUBLIC_APP_URL=https://your-domain.com

# ============================================
# Environment
# ============================================
# Node environment - must be 'production' for production builds
NODE_ENV=production

# ============================================
# SEO & Verification
# ============================================
# Google Search Console verification code
# Add only the content value from: <meta name="google-site-verification" content="YOUR_CODE" />
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# ============================================
# Feature Flags
# ============================================
# Enable debug mode for analytics (shows events in console)
# Always set to false in production
NEXT_PUBLIC_ANALYTICS_DEBUG=false

# ============================================
# Rate Limiting
# ============================================
# Maximum requests per minute for API endpoints
RATE_LIMIT_MAX_REQUESTS=60

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# Security Configuration
# ============================================
# CORS allowed origins (comma-separated)
# Update with your actual production domains
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Enable/disable HSTS preload (only for production with valid HTTPS)
SECURITY_HSTS_PRELOAD=true

# ============================================
# Deployment Platform
# ============================================
# Vercel deployment settings (auto-configured, but can override)
# VERCEL_URL=your-domain.com
# VERCEL_ENV=production

# ============================================
# Content Security
# ============================================
# Allowed script sources for CSP (if overriding defaults)
# NEXT_PUBLIC_CSP_SCRIPT_SRC='self'

# Allowed image sources for CSP
# NEXT_PUBLIC_CSP_IMG_SRC='self' data: https://*.githubusercontent.com https://*.apple.com
